<% if @user.errors.any? %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <strong><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</strong>

    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user, html: { role: "form" ,:multipart => true } do |f| %>
<div class="row">
  <div class="col-md-6 col-lg-7">
    
    <h3>User credentials</h3>
    <div class="form-group">
      <%= f.text_field(:name, class:"form-control", autofocus: true, placeholder: "Full Name") %>
    </div>
    <div class="form-group">
      <%= f.email_field(:email, class:"form-control", autofocus: true, placeholder: "Email Address") %>
    </div>
    <div class="form-group">
      <%= f.text_field(:ic, class:"form-control", autofocus: true, placeholder: "Identification Number") %>
    </div>
    <div class="form-group">
      <%= f.text_field(:phone, class:"form-control", autofocus: true, placeholder: "Phone Number") %>
    </div>

    <div class="form-group">
      <%= f.password_field:password, class:"form-control", autofocus: true, placeholder: "Password" %>
    </div>
    <div class="form-group">
      <%= f.password_field:password_confirmation, class:"form-control", autofocus: true, placeholder: "Password confirmation" %>
    </div>
    
    <div class="form-group">
      <%= f.file_field:image %>
    </div>
    
      <div class="form-group">
      <%= f.hidden_field :image_cache %>
    </div>

    
  </div>


  <div class="col-md-6 col-lg-5">
    <h3>Roles</h3>
    <div class="well" id="nested-well">
      <%  Role.all.each do |t|  %>
        <%= f.label t.name  %>
        <% checkbox = false %>
        <% if @user.has_role?(t.name) %>
        <% checkbox = true %>
        <% end %>
        <%= check_box_tag "roles[]", t.name, checkbox %>
      <% end %>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-md-12">
    <% if @user.new_record? %> <!-- if it's a new record show the create button -->
      <div class="form-group pull-left">
        <%= f.submit 'Create', class: "btn btn-sm btn-primary" %>
      </div>
    <% else %> <!-- else show an update button -->
      <div class="form-group pull-left">
        <%= f.submit 'Update', class: "btn btn-sm btn-primary" %>
      </div>
      <div class="form-group pull-right"> <!-- include the show, and back button if user is to be updated -->
        <%= link_to 'Show', @user, class: "btn btn-sm btn-info" %>
        <%= link_to 'Back', url_for(:back), class: "btn btn-sm btn-default" %>
      </div>
      </div>
    <% end %>
  </div>
</div>
<% end %>
