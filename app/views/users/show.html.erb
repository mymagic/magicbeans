<div class="header-container">
    <h1 class="header">User Profile of <%= @user.name %></h1>
    <%= link_to 'Back', url_for(:back), class: "btn btn-default" %>
    <% if can? :edit, @user %>
        <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-primary" %>
    <% end %>
</div>
<section class="row">
    <div class="col-md-12">
        <div class="well">
            <img src="<%= profile_picture(@user) %>" class="img-circle center-block" style="min-width: 150px; max-height:150px;" alt="">
            
            <h1 class="text-center text-capitalize"><strong><%= @user.name %></strong></h1>

            <ul class="list-inline text-center">
                <li><h4 class="text-muted"><span class="glyphicon glyphicon-phone"></span> <%= @user.phone %></h4></li>
                <li><h4 class="text-muted"><span class="glyphicon glyphicon-user"></span> <%= @user.ic %></h4></li>
                <li><a href="mailto:<%= @user.email %>"><h4 class="text-muted"><span class="glyphicon glyphicon-envelope"></span> <%= @user.email %></h4></a></li>
            </ul>
        </div>
    </div>
</section>