<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
  <div class="col-md-12">
    <h3>User credentials</h3>
      <div class="form-group">
        <%= f.email_field(:email, class:"form-control", autofocus: true, placeholder: "Email") %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.password_field:password, class:"form-control", autofocus: true, placeholder: "Password" %>
      </div>
      <div class="form-group">
        <%= f.password_field:password_confirmation, class:"form-control", autofocus: true, placeholder: "Password confirmation" %>
      </div>
    </div>
</div>


<div class="row">
  <div class="col-md-12">
    <% if @user.new_record? %> <!-- if it's a new record show the create button -->
      <div class="form-group pull-left">
        <%= f.submit 'Create account', class: "btn btn-sm btn-primary" %>
      </div>
      <% if is_admin? %>
      <div class="form-group pull-right">
        <%= link_to 'Back', users_path, class: "btn btn-sm btn-default" %>
      </div>
      <% end %>
    <% else %> <!-- else show an update button -->
      <div class="form-group pull-left">
        <%= f.submit 'Update account', class: "btn btn-sm btn-primary" %>      
        <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-sm btn-danger" %>
      </div>
      <div class="form-group pull-right"> <!-- include the show, and back button if user is to be updated -->
        <%= link_to 'Show', @user, class: "btn btn-sm btn-info" %>
        <%= link_to 'Back', :back, class: "btn btn-sm btn-default" %>
      </div>
    <% end %>
  </div>
</div>
<% end %>
