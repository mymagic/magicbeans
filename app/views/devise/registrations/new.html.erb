<div class="col-md-8 col-md-offset-2">
  <h2>Sign up</h2>

  <%= devise_error_messages! %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-md-12">
        <div class="form-group">
          <%= f.email_field(:email, class:"form-control", autofocus: true, placeholder: "Email") %>
        </div>
        <div class="form-group">
          <%= f.password_field:password, class:"form-control", autofocus: true, placeholder: "Password" %>
        </div>
        <div class="form-group">
          <%= f.password_field:password_confirmation, class:"form-control", autofocus: true, placeholder: "Password confirmation" %>
        </div>
      </div>
  </div>


  <div class="row">
    <div class="col-md-12">
      <% if @user.new_record? %> <!-- if it's a new record show the create button -->
        <div class="form-group pull-left">
          <%= f.submit 'Create account', class: "btn btn-sm btn-primary" %>
        </div>
        <% if is_admin? %>
        <div class="form-group pull-right">
          <%= link_to 'Back', root_path, class: "btn btn-sm btn-default" %>
        </div>
        <% end %>
      <% else %> <!-- else show an update button -->
        <div class="form-group pull-left">
          <%= f.submit 'Update account', class: "btn btn-sm btn-primary" %>
        </div>
        <div class="form-group pull-right"> <!-- include the show, and back button if user is to be updated -->
          <%= link_to 'Show', @user, class: "btn btn-sm btn-info" %>
          <%= link_to 'Back', root_path, class: "btn btn-sm btn-default" %>
        </div>
      <% end %>
    </div>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>