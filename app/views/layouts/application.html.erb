<!doctype html>
<html class="no-js">
  <head>
    <meta charset="utf-8">
    <title>Magicbeans</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true, :debug => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true, :debug => true %>
    <link rel="shortcut icon" href="<%= asset_path 'favicon.png' %>">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <%= csrf_meta_tags %>
  </head>
  <body>
    <!--[if lt IE 10]>
      <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->


    <div class="main">
      <%= render 'layouts/navigation' %>

      <div class="content">
        <a href="#" class="notification">
          <span class="glyphicon glyphicon-bell" aria-hidden="true"></span>
        </a>
        <%= render partial: "shared/flash_messages", flash: flash %>
        <%= yield %>
      </div>
    </div>
    <div class="footer">
      <p class="text-center">Made with <span class="glyphicon glyphicon-heart"></span> by PFS</p>
    </div>
</body>
</html>