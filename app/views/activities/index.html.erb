<div class="page-header">
  <h1>Listing activities</h1>
</div>

<div class="table-responsive">
  <table class="table table-condensed">
    <thead>
    <tr>
      <th>Activity</th>
      <th>Program</th>
      <th>Venue</th>
      <th>Starting Date</th>
      <th>Ending Date</th>
      <th width="130px">Actions</th>
    </tr>
    </thead>

    <tbody>
    <% @activities.each do |activity| %>
        <tr>
          <td><%= activity.name %></td>
          <td><%= activity.program.name %></td>
          <td><%= activity.venue %></td>
          <td><%= activity.start_date %></td>
          <td><%= activity.end_date %></td>
          <td width="130px">
            <% if can? :show, activity %>
            <%= link_to '<span class="glyphicon glyphicon-search" aria-hidden="true"></span>'.html_safe, activity, class:"btn btn-sm btn-info" %>
            <% end %>

            <% if can? :update, activity %>
            <%= link_to '<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>'.html_safe,  edit_activity_path(activity), class:"btn btn-sm btn-warning" %>
            <% end %>

            <% if can? :destroy, activity %>
                <%= link_to '<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>'.html_safe, activity, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-danger" %>
            <% end %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
