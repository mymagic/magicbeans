<div class="page-header">
  <h1>Listing activities</h1>
</div>

<div class="table-responsive">
  <table class="table table-condensed">
    <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Venue</th>
      <th>Date</th>
      <th>Speaker</th>
      <th>Speakerbio</th>
      <th>Bio URL</th>
      <th>Key Takeaways</th>
      <th>Prerequisite</th>
      <th>Max Attendees</th>
      <th>Tags</th>
      <th>Resources</th>
      <th width="130px">Actions</th>
    </tr>
    </thead>

    <tbody>
    <% @activities.each do |activity| %>
        <tr>
          <td><%= activity.name %></td>
          <td><%= activity.description %></td>
          <td><%= activity.venue %></td>
          <td><%= activity.date %></td>
          <td><%= activity.speaker %></td>
          <td><%= activity.speakerbio %></td>
          <td><%= activity.biolink %></td>
          <td><%= activity.keytakeaway %></td>
          <td><%= activity.prerequisite %></td>
          <td><%= activity.maxattendee %></td>
          <td><%= activity.tags %></td>
          <td><%= activity.resources %></td>
          <td width="130px">
            <%= link_to '<span class="glyphicon glyphicon-search" aria-hidden="true"></span>'.html_safe, activity, class:"btn btn-sm btn-info" %>
            <%= link_to '<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>'.html_safe,  edit_activity_path(activity), class:"btn btn-sm btn-warning" %>
            <%= link_to '<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>'.html_safe, activity, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-danger" %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
